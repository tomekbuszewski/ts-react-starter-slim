{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@config/*": ["../@config/*"],
      "@components/*": ["./components/*"],
      "@mocks/*": ["../mocks/*"],
      "@services/*": ["./services/*"],
      "@typings": ["../@typings/index.d.ts"]
    }
  },
  "include": [
    "./src/**/*",
    "./*.js",
    "./@config/**/*",
    "./@typings",
    "./tests/**/*",
    "./mocks/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest",
    "src/setupTests.ts"
  ]
}
